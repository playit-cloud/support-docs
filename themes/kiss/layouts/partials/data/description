{{- with .Description -}}
  {{- . -}}
{{- else -}}
  {{- with .Params.description_file -}}
    {{- $file := $.Site.GetPage . -}}
    {{- if $file -}}
      {{- $file.Plain | truncate 200 -}}
    {{- else -}}
      {{- $content := readFile . -}}
      {{- $content | truncate 200 -}}
    {{- end -}}
  {{- else -}}
    {{- if $.IsPage -}}
      {{- $.Summary -}}
    {{- else -}}
      {{- with $.Site.Params.Info.description -}}
        {{- . -}}
      {{- end -}}
    {{- end -}}
  {{- end -}}
{{- end -}}
